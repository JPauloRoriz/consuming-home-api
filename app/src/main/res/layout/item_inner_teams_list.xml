<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:foreground="#0C000000"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="@dimen/dimen_4">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_imageStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_6"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:scaleType="fitXY"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".4"
            app:shapeAppearanceOverlay="@style/RoundedImageView"
            tools:src="@tools:sample/backgrounds/scenic" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h4"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            tools:text="FLAMENGO" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/dimen_4"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="4"
            android:scrollHorizontally="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h5"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_imageStart"
            app:layout_constraintTop_toTopOf="@+id/img_imageStart"
            app:layout_constraintVertical_bias="0"
            tools:text="Time de tradição, blá blá, blá, bçá Time de tradição, blá blá, blá, bçá Time de tradição tradi  Time de tradição tradi e tradição tradi" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>